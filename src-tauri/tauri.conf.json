{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sentinel-ai",
  "version": "0.1.0",
  "identifier": "com.sentinel-ai.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1499",
    "beforeBuildCommand": "yarn build && cd src-tauri/agent-browser && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Sentinel AI",
        "width": 1400,
        "height": 900,
        "minWidth": 1100,
        "minHeight": 500,
        "closable": true,
        "minimizable": true,
        "maximizable": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "agent-browser/dist/**/*",
      "agent-browser/package.json"
    ]
  },
  "plugins": {
    "opener": {
      "requireLiteralLeadingDot": false
    }
  }
}